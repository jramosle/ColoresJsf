<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>coloresBean</managed-bean-name>
        <managed-bean-class>com.colores.jsf.uniminuto.beans.ColoresBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>amarillo</from-outcome>
            <to-view-id>/ColorAmarillo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>rojo</from-outcome>
            <to-view-id>/ColorRojo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>azul</from-outcome>
            <to-view-id>/ColorAzul.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
